<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_dino_erp_stock_cost" model="ir.ui.view">
        <field name="name">product.template.form.dino_erp_stock.cost</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            
            <xpath expr="//div[@name='options']" position="inside">
                <field name="purchase_required" widget="badge" decoration-warning="purchase_required == True" invisible="purchase_required == False"/>
            </xpath>
            
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="apply_analogs"/>
            </xpath>

            <xpath expr="//field[@name='list_price']" position="after">
                <field name="calculated_cost" readonly="1" groups="base.group_user"/>
                <field name="actual_cost" readonly="1" groups="base.group_user"/>
                <field name="min_qty"/>
                <field name="qty_available_with_analogs" readonly="1"/>
            </xpath>
            
            <xpath expr="//page[@name='inventory']" position="after">
                <page name="dino_analogs" string="Аналоги (Dino Stock)" invisible="[('apply_analogs', '!=', True)]">
                    <group>
                        <field name="analog_ids" widget="many2many_tags"/>
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>